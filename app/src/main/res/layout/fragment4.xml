<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:text="FAQ"
        android:layout_margin="20dp"
        android:fontFamily="@font/roboto_slab"
        android:textSize="24sp"
        android:id="@+id/title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/title"
        android:layout_margin="12dp"
        android:id="@+id/qa1"
        android:background="@drawable/light_text_bg"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/q1"
            android:textSize="18sp"
            android:textColor="#7D1935"
            android:text="Q1 : Why does my stomach ache during periods?"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/a1"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#E63E6D"
            android:text="During your menstrual period, your uterus contracts to help expel its lining.This leads to stomach pain."
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/qa1"
        android:layout_margin="12dp"
        android:id="@+id/qa2"
        android:background="@drawable/dark_text_bg"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/q2"
            android:textSize="18sp"
            android:textColor="#7D1935"
            android:text="Q2 : Why Do I Get a Period?"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/a2"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#E63E6D"
            android:text="This is because a healthy girl or woman has two ovaries, both of which contain eggs.These eggs mature and the uterus gets ready for pregnancy. if the egg doesnt fertilize then the uterus releases the tissue. This causes periods"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/qa2"
        android:layout_margin="12dp"
        android:id="@+id/qa3"
        android:background="@drawable/light_text_bg"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/q3"
            android:textSize="18sp"
            android:textColor="#7D1935"
            android:text="Q3: What Are the Most Common Period Symptoms?"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/a3"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#E63E6D"
            android:text="Some of the common symptoms are : Cramps ,Anxiety,Bloating,Depression,Cravings, Irritability.If pain is intense please consult a doctor."
            android:layout_height="wrap_content"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/qa3"
            android:layout_margin="12dp"
            android:id="@+id/qa4"
            android:background="@drawable/dark_text_bg"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/q4"
                android:textSize="18sp"
                android:textColor="#7D1935"
                android:text="Q4: What Causes Period Symptoms?"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/a4"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#E63E6D"
                android:text="The hormones estrogen and progesterone are responsible for the emotional changes. This is because these hormones affect serotonin levels in the brain, which can control mood and digestive health."
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/qa4"
            android:id="@+id/help_msg"
            android:layout_margin="14dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="If you have further question feel free to post your question in the forum!"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:id="@+id/go_to_chat"
            android:layout_below="@id/help_msg"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:text="Ask Question"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</ScrollView>