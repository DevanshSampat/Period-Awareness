<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PeriodProductInformation">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/title"
        android:fontFamily="@font/roboto_slab"
        android:text="Period Products and how to use them"
        android:textStyle="bold" />
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:id="@+id/pad_card"
    android:layout_margin="20dp"
    android:padding="12dp"

    app:cardCornerRadius="12dp"
    android:layout_below="@id/title"
    android:background="@drawable/light_text_bg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/light_text_bg"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tampon_text"
        android:textSize="14sp"
        android:textColor="#7D1935"
        android:text="Sanitary pads are strips of padding that have a sticky side you attach to your underwear to hold them in place."
        android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="120dp"
                android:src="@drawable/pad"
                android:layout_height="120dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#7D1935"
            android:text="One side of the pad is made of an absorbent material that soaks up the blood."
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#7D1935"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="Change your pad every 6 hours"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:text="Click here for video"
            android:id="@+id/go_to_video_fragment"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/cup_card"
        android:layout_margin="20dp"
        android:padding="12dp"
        app:cardCornerRadius="12dp"
        android:layout_below="@id/pad_card"
        android:background="@drawable/dark_text_bg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dark_text_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/cup_text"
                android:textSize="14sp"
                android:textColor="#7D1935"
                android:text="Menstrual cups are an alternative to sanitary pads and tampons. The cup is made from silicone and you put it inside your vagina."
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:src="@drawable/img_2"
                    android:layout_height="120dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#7D1935"
                android:text="Menstrual cups collect the blood rather than absorb it. SO it is washable and reusable"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#7D1935"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="Change your pad every 6-12 hours"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_bg"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:text="Click here for video"
                android:id="@+id/go_video_fragment"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_below="@id/cup_card"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</ScrollView>